{
  "name": "devblocks",
  "version": "1.0.0",
  "description": "Landing page",
  "main": "index.js",
  "scripts": {
    "watch-sass": "node-sass --watch src/main.scss public/css/styles.css",
    "devserver": "live-server public/",
    "start": "npm-run-all --parallel devserver watch-sass",
    "compile-sass": "node-sass src/main.scss src/styles.comp.css",
    "prefix-css": "postcss --use autoprefixer -b \"last 10 versions\" src/styles.comp.css -o src/styles.prefix.css",
    "compress-css": "node-sass --output-style compressed src/styles.prefix.css public/css/styles.css",
    "build-css": "npm-run-all compile-sass prefix-css compress-css"
  },
  "author": "Jose A Castillo",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.1.5",
    "concat": "^1.0.3",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "postcss": "^7.0.5",
    "postcss-cli": "^6.0.1"
  }
}
